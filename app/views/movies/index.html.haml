-# This file is app/view/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr	
      %th{:class=>[("hilite" unless @sort != "title")]}= link_to 'Movie Title', :sortby=>'title' 	
      %th Rating
      %th{:class=>[("hilite" unless @sort != "release_date")]}= link_to 'Release Date', :sortby=>'release_date'
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
